import javax.swing.JOptionPane;
  
public class Valentines {
  
  public static void main(String[] args) {
    
    String price = JOptionPane.showInputDialog("What is the average cost" + 
                                               " of an entree? ");
    
    double avg = Double.parseDouble(price);
    
    double amount = 3.21 * (16 + avg);
    
    JOptionPane.showMessageDialog(null,String.format("You will spend about $%.2f ",amount,  
                                  " on dinner for 2 on Valentine's."));
    
  }
}
    
  
    
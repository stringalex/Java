import java.util.Scanner;
public class testAverage2 {
  
  public static void main(String [] args){
    
    Scanner keyboard = new Scanner(System.in);
    int total = 0;
    int score;
    
    System.out.println("How many students do you have? ");
    int numStudents = keyboard.nextInt();
    
    System.out.println("How many tests per student? ");
    int tests = keyboard.nextInt();
    
    for(int i = 1; i <= numStudents; i++){
      
      System.out.println("Student number " + i);
      System.out.println("----------------");
      
      for(int j = 1; j <= tests; j++){
        
        System.out.println("Enter score " + test + ": ");
        score = keyboard.nextInt();
        
        total += score; 
      }
    }
    double average = total/test;
    System.out.printf("The average for student %d is %.1f.\n\n", i, average);
      
  }
}
      
    
    
    
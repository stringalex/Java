import java.util.Scanner;

public class HalfTree
{
  public static void main(String[] args)
  {
    
    
    Scanner keyboard = new Scanner(System.in);
    int n = keyboard.nextInt();
    for(int i = 1; i <= n; i++)
      {
      for(int j = 0; j < n - i; j++) {
        System.out.print(" ");
      }
          for(int k = 0; k < i;k++)
          
           
              System.out.print("*");
          
          System.out.println();
      }
  
    
  }
}